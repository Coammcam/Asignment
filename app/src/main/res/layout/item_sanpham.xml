<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="16dp"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/image_products"
            android:layout_margin="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/tv_Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Banh quy bo Italy"
                android:textColor="#F44336"
                android:textSize="20dp"
                android:textStyle="bold" />

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal">

               <TextView
                   android:id="@+id/tv_Gia"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="45.000 VND"
                   android:textStyle="bold"
                   android:layout_marginTop="2dp"
                   android:textColor="#000000"/>
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text=" - "
                   android:textStyle="bold"
                   android:layout_marginTop="2dp"
                   android:textColor="#000000"/>

               <TextView
                   android:id="@+id/tv_SoLuong"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="SL: 10"
                   android:textStyle="bold"
                   android:layout_marginTop="2dp"
                   android:textColor="#000000"/>
           </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="2dp">

                <TextView
                    android:id="@+id/tv_ChinhSua"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/chinh_sua"
                    android:textStyle="bold"
                    android:textColor="#FA4E42"/>

                <TextView
                    android:id="@+id/tv_Xoa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/xoa"
                    android:textStyle="bold"
                    android:textColor="#2196F3"
                    android:layout_marginLeft="50dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>